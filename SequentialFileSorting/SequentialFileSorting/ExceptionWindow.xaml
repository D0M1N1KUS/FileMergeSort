<Window x:Class="SequentialFileSorting.SortingManagment.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SequentialFileSorting.SortingManagment"
        mc:Ignorable="d"
        Title="Error" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="groupBox" Header="Exception" Margin="10,10,10,0">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,2,0,0">
                <TextBlock x:Name="TextBlock_Exception" Margin="0,0,0,0" TextWrapping="Wrap" Text="Sample Text" FontSize="11"/>
            </Border>
        </GroupBox>
        <GroupBox x:Name="groupBox_Copy" Header="Details" Margin="10,8,10,10" Grid.Row="1">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,2,0,0">
                <TextBlock x:Name="TextBlock_Details" Margin="0,0,0,0" TextWrapping="Wrap" Text="Sample Text" FontSize="11"/>
            </Border>
        </GroupBox>
    </Grid>
</Window>
